<ScrollContainer xmlns="https://spacestation14.io"
                 xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                 SizeFlagsStretchRatio="8"
                 HorizontalExpand="True"
                 VerticalExpand="True">
    <BoxContainer Name="MaterialList"
                  Orientation="Vertical"
                  SeparationOverride="8">
        <controls:FancyLabel Name="ConnectToSiloLabel"
                             Text="{Loc 'lathe-menu-connected-to-silo-message'}"
                             TextStyle="Callout"
                             Align="Center" />
        <controls:FancyLabel
            Name="NoMatsLabel"
            Text="{Loc 'lathe-menu-no-materials-message'}"
            TextStyle="Callout"
            Align="Center" />
    </BoxContainer>
</ScrollContainer>
