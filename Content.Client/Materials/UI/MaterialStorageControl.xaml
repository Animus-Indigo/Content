<ScrollContainer xmlns="https://spacestation14.io"
                 xmlns:uik="clr-namespace:Content.Client.UIKit.Controls"
                 SizeFlagsStretchRatio="8"
                 HorizontalExpand="True"
                 VerticalExpand="True">
    <BoxContainer Name="MaterialList"
                  Orientation="Vertical"
                  SeparationOverride="8">
        <uik:UIKLabel Name="ConnectToSiloLabel"
                             Text="{Loc 'lathe-menu-connected-to-silo-message'}"
                             TextStyle="Callout"
                             Align="Center" />
        <uik:UIKLabel
            Name="NoMatsLabel"
            Text="{Loc 'lathe-menu-no-materials-message'}"
            TextStyle="Callout"
            Align="Center" />
    </BoxContainer>
</ScrollContainer>
