<uik:UIKWindow
    xmlns="https://spacestation14.io"
    xmlns:uik="clr-namespace:Content.Client.UIKit.Controls"
    Title="{Loc Add Atmos}">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Horizontal">
            <Label Text="{Loc Grid}" MinSize="100 0" />
            <Control MinSize="50 0" />
            <uik:UIKOptionButton Name="GridOptions" MinSize="100 0" HorizontalExpand="True" />
        </BoxContainer>
        <Button Name="SubmitButton" Text="{Loc Add Atmos}" />
    </BoxContainer>
</uik:UIKWindow>
